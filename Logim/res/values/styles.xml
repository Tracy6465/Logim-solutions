<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TODO -->
    <style name="actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/red</item>
    </style>
    
    <style name="spinner_style" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_selector</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">0dip</item>
    </style>
    
    <style name="logim_style" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/actionbar_style</item>
        <item name="android:actionBarItemBackground">@drawable/actionbar_button_selector</item>
        <item name="android:actionDropDownStyle">@style/spinner_style</item>
    </style>
    
    <style name="tutorials_style" parent="@android:style/Theme.Translucent.NoTitleBar">
        <item name="android:windowBackground">@color/black_transparent</item>
    </style>
    
    <style name="layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dip</item>
    </style>
    
    <style name="button_style">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">48.0dip</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
        <item name="android:layout_weight">5</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="button_red_style" parent="@style/button_style">
        <item name="android:background">@drawable/button_red_selector</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="button_grey_style" parent="@style/button_style">
        <item name="android:background">@drawable/button_grey_selector</item>
        <item name="android:textColor">@color/hint</item>
    </style>
    
    <style name="button_hint_style" parent="@style/button_style">
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">0dip</item>
        <item name="android:textColor">@color/hint</item>
    </style>
    
    <style name="super_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">4.0dip</item>
        <item name="android:layout_marginBottom">4.0dip</item>
        <item name="android:layout_marginLeft">15.0dip</item>
        <item name="android:layout_marginRight">15.0dip</item>
    </style>

    <style name="edittext_style" parent="@style/super_style">
        <item name="android:layout_marginTop">10.0dip</item>
        <item name="android:background">@drawable/edittext_red_selector</item>
        <item name="android:singleLine">true</item>
    </style>
	
    <style name="text_style" parent="@style/super_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="text_style_info" parent="@style/super_style">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal</item>
    </style>
    
</resources>